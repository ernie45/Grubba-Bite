<h1>Burgers!</h1>
<h2>Burgers that haven't been devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{this.burger_name}}
        <button class="change-devoured" data-id="{{this.id}}" data-currentDevouredState="{{this.devoured}}">Devour</button>
        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
<h2>Burgers that have been devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{this.burger_name}}
        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/if}}
  {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burger">Burger Type:</label>
    <input type="text" id="burg" name="burger_name">
  </div>
  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked>Devoured!<br>
    <input type="radio" name="sleepy" value="0"> Not Devoured
  </div>
  <button type="submit">Add Burger</button>
</form>